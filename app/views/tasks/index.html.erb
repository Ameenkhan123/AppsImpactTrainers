<h1>Tasks</h1>

<table id="example" class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
    <tr>
      <td><%= task.title %></td>
      <td><%= task.try(:description).try(:html_safe) %></td>
      <% if can? :read, task%>
      <td><%= link_to 'Show', task %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
