<%= form_with(model: [:admin, @user], local: true) do |f| %>
<% if user.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
	<ul>
		<% user.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
</div>
<% end %>
<div class="row">
	<div class="col-sm-10">
		<div class="form-group-material">
			<%= f.text_field :name, autofocus: true, autocomplete: "name",:class =>"input-material", :id =>"register-username" %>
			<label for="register-username" class="label-material">Name</label>
		</div>
		<div class="form-group-material">
			<%= f.text_field :email, autofocus: true, autocomplete: "email",:class =>"input-material", :id =>"register-register" %>
			<label for="register-email" class="label-material">Email Address </label>
		</div>
		<div class="form-group-material">
			<%= f.text_field :contact, autocomplete: "contact", :class =>"input-material", :id =>"register-password" %>
			<label for="register-password" class="label-material">Contact</label>
		</div>
		<div class="form-group-material">
			<%= f.text_field :password, autocomplete: "contact", :class =>"input-material", :id =>"register-password" %>
			<label for="register-password" class="label-material">Password</label>
		</div>
		<div class="form-group-material">
			<%= f.text_field :password_confirmation, autocomplete: "contact", :class =>"input-material", :id =>"register-password" %>
			<label for="register-password" class="label-material">Password Confirmation</label>
		</div>
		<div class="form-group-material">
			<%= f.hidden_field :profile_image, value: @user.cached_profile_image_data %>
			<%= f.file_field :profile_image, :id =>"register-username" %>
		</div>
		<div class="form-group-material">
			<%= f.collection_select(:role, User::ROLES, :to_s, lambda{|i| i.to_s.humanize}, :class =>'form-control') %>
		</div>
		<div class="form-group text-center">
			<%= f.submit "Sign up", :id => 'login', :class =>  'btn btn-primary' %>
		</div>
	</div>
</div>
<% end %>