<h1>users</h1>

<table id="example" class="table table-striped table-bordered" >
  <thead>
    <tr>
      <th>name</th>
      <th>contact</th>
      <th>profile_image</th>
      <th>email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.contact %></td>
      <td><%= image_tag user.profile_image_url(:thumbnail), size: "100x100", class: "img-thumbnail" %>
      </td>
      <td><%= user.email %></td>
      <td><%= link_to 'Show', [:admin, user]%></td>
      <td><%= link_to 'Edit', [:edit, :admin, user] %></td>
      <td><%= link_to 'Destroy', [:admin, user], method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New user', new_admin_user_path %>
