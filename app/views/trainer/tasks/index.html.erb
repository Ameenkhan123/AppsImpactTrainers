<%#= search_form_for @q do |f| %>
<%#= f.label :name_cont %>
<%#= f.search_field :title_cont %>
<%#end%>
<h1>Tasks</h1>

<table id="example" class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th >Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
    <tr>
      <td><%= task.title %></td>
      <td><%= task.try(:description).try(:html_safe) %></td>
      <% if can? :read, task%>
      <td><%= link_to 'Show', [:trainer, task] %>
        <% end %>
        <% if can? :update, task%>
        <%= link_to 'Edit', [:edit, :trainer, task] %>
        <%= link_to 'Destroy',  [:trainer, task], method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :create, Task%>
<%= link_to 'New Task', new_trainer_task_path %>
<% end %>
