<li>
  <div class="panel panel-default" data-conversation-id="<%= conversation.id %>">
    <div class="panel-heading">
      <%= link_to conversation.opposed_user(user).name, '', class: 'toggle-window' %>
      <%= link_to "x", close_conversation_path(conversation), class: "btn btn-default btn-xs pull-right", remote: true, method: :post %>
    </div>

    <div class="panel-body" style="display: none;">
      <div class="chats-list">
        <ul>
          <%= render 'conversations/conversation_content', chats: conversation.chats, user: user %>
        </ul>
      </div>
      <form class="new_chat">
        <input name="conversation_id" type="hidden" value="<%= conversation.id %>">
        <input name="user_id" type="hidden" value="<%= user.id %>">
        <p class="emoji-picker-container cke_top">
          <textarea name="body" class="form-control"  data-emojiable="true" ></textarea>
        </p>
        <input type="submit" class="btn btn-success" value="Send">
      </form>
    </div>
  </div>
</li>
<style type="text/css">
  .cke_top {
    border-bottom: 1px solid #d1d1d1;
    background: white; 
    padding: 0px 0px 0px; 
    white-space: normal;
  }
</style>