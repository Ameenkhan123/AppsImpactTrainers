<table id="example" class="table table-striped table-bordered" >
  <thead>
    <tr>
      <th>name</th>
      <th>contact</th>
      <th>profile_image</th>
      <th>email</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <% if user.role == "trainer" %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.contact %></td>
      <td><%= image_tag user.profile_image_url(:thumbnail), size: "100x100", class: "img-thumbnail" %>
      </td>
      <td><%= user.email %></td>
    </tr>
    <% end %>
    <% end %>
  </tbody>
</table>