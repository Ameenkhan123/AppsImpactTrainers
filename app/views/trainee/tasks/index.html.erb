<%#= search_form_for @q do |f| %>
<%#= f.label :name_cont %>
<%#= f.search_field :title_cont %>
<%#end%>
<h1>Tasks</h1>

<table id="example" class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th >Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
    <tr>
      <td><%= task.title %></td>
      <td><%= task.try(:description).try(:html_safe) %></td>
      <td><%= link_to 'Show', [:trainee, task] %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
